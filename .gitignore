cat > .gitignore <<'GITIGNORE'
# Virtual envs
.venv/
venv/
env/
__pycache__/
*.pyc
*.pyo
*.pyd

# Node / Next / frontend
node_modules/
.next/
dist/
build/

# Environment variables
.env
.env.*
!.env.example

# Editor & OS
.vscode/
.idea/
.DS_Store
Thumbs.db

# Logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Data / Databases
data/
logs/
*.db
*.sqlite

# Scraper Output (runtime JSON)
gem-scraper/daily_data/
gem-scraper/results/
GITIGNORE

git add .gitignore
git commit -m "Update .gitignore"
git push
