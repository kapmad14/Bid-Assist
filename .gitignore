# (from repo root) create/update .gitignore with the recommended content
cat > .gitignore <<'GITIGNORE'
# Virtual envs
.venv/
venv/
__pycache__/
*.pyc
*.pyo
*.pyd

# Node / Next / frontend
node_modules/
.next/
dist/
build/

# Env files (ignore all .env anywhere)
.env
.env.local
.env.*.local
**/.env
**/.env.local
**/.env.*.local
**/*.env

# Editor & OS
.vscode/
.idea/
.DS_Store
Thumbs.db

# Logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
GITIGNORE

git add .gitignore
git commit -m "Add .gitignore to ignore env files and common artifacts"
git push

#database
data/
logs/
